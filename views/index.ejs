<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Images</title>
  </head>
  <body>
    <div class="grid">
      <% images.forEach((img) => { %>
      <div class="imgContainer">
        <img
          class="img"
          src="../<%=dir%>/<%=img.imgLocalSrc%>"
          alt="An image"
        />
        <p>
          <a href="<%=img.src%>">source</a> <br />
          Height: <%=img.naturalHeight%> Width: <%=img.naturalWidth%>
        </p>
      </div>
      <% }) %>
    </div>
  </body>
  <style>
    body {
      font-family: sans-serif;
    }
    a {
      text-decoration: none;
    }
    .grid {
      display: grid;
      grid-template-columns: repeat(8, auto);
      grid-template-rows: repeat(8, auto);
      grid-gap: 20px;
      margin: 0 auto;
      max-width: 60%;
    }

    .img {
      max-width: 120px;
      object-fit: contain;
    }
  </style>
</html>
